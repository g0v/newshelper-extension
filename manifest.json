{
  "applications": {
    "gecko": {
      "id": "newshelper@g0v.tw",
      "strict_min_version": "51.0"
    }
  },

  "manifest_version": 2,

  "name": "newshelper",
  "description": "協助您判別含有誤導資訊的新聞",
  "version": "1.2.0",
  "author": "ronnywang@gmail.com, wildsky@moztw.org, racklin@gmail.com",
  "permissions": [
    "notifications",
    "http://newshelper.g0v.tw/*",
    "https://www.facebook.com/*",
    "http://www.facebook.com/*",
    "http://*/*",
    "https://*/*"
  ],

  "background": { "scripts": ["jquery-3.2.1.min.js", "libs/url-normalizer.js/url-normalizer.js", "background.js"] },

  "page_action" : {
      "default_icon" : "icon.png",
      "default_title" : "設定新聞小幫手",
      "default_popup" : "popup.html"
  },

  "web_accessible_resources" : [
    "libs/url-normalizer.js/map.csv"
  ],
  "content_scripts" : [
    {
      "matches": [
        "http://www.facebook.com/*",
        "https://www.facebook.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-3.2.1.min.js",
        "content_script.js"
      ],
      "css": [
        "content_style.css"
      ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],

  "homepage_url": "https://addons.mozilla.org/zh-TW/firefox/addon/newshelper/",

  "repository": {
    "type": "git",
    "url": "git://github.com/g0v/newshelper-extension.git"
  },
  "bugs": {
    "url": "https://github.com/g0v/newshelper-extension/issues"
  },
  "keywords": [
    "newshelper",
    "g0v-tw"
  ],

  "icons" : {
     "128" : "newshelper128x128.png",
     "96" : "newshelper96x96.png",
     "48" : "newshelper48x48.png"
  }
}
